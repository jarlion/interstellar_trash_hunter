{
  // 使用 IntelliSense 了解相关属性。
  // 悬停以查看现有属性的描述。
  // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Attach to Process",
      "type": "debugpy",
      "request": "attach",
      "connect": { "host": "0.0.0.0", "port": 5678 },
      "pathMappings": [{ "localRoot": "${workspaceFolder}", "remoteRoot": "." }]
    },
    {
      "name": "Python 调试程序: 入口",
      "type": "debugpy",
      "request": "launch",
      "program": "-m interstellar_trash_hunter",
      "console": "integratedTerminal"
    },
    {
      "name": "Python 调试程序: 当前文件",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    }
  ]
}
